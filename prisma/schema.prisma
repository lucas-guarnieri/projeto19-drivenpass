// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique


  Credential Credential[]
  SecureNote SecureNote[]
  Card       Card[]
  Wifi       Wifi[]
  Document   Document[]

  @@map("users")
}

model Credential {
  id           Int    @id @default(autoincrement())
  title        String
  url          String
  userName     String
  userPassword String
  userId       Int
  user         User   @relation(fields: [userId], references: [id])


  @@unique([userId, title])
  @@map("credentials")
}

model SecureNote {
  id     Int    @id @default(autoincrement())
  title  String @db.VarChar(50)
  note   String @db.VarChar(1000)
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("secureNotes")
}

model Card {
  id             Int      @id @default(autoincrement())
  title          String
  cardType       CARDTYPE
  cardNumber     Int
  printedName    String
  cvv            String
  password       String
  expirationDate String
  isVirtual      Boolean
  userId         Int
  user           User     @relation(fields: [userId], references: [id])

  @@unique([userId, title])
  @@map("cards")
}

model Wifi {
  id       Int    @id @default(autoincrement())
  title    String
  wifiName String
  password String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])

  @@map("wifis")
}

model Document {
  id                Int          @id @default(autoincrement())
  documentType      DOCUMENTTYPE
  userName          String
  dateEmission      DateTime     @db.Date
  dateExpiration    DateTime     @db.Date ///TODO: test viability
  documentNumber    Int
  emiterInstitution String
  userId            Int
  user              User         @relation(fields: [userId], references: [id])

  @@map("documents")
}

enum CARDTYPE {
  credit
  debit
}

enum DOCUMENTTYPE {
  rg
  cnh
}
